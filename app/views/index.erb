<div class="container">
  <h1>All Tasks</h1>
  <% @tasks.each do |task| %>
    <div class='col-md-6'>
      <h3><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
    </div>
    <div class='col-md-3'>
      <a href="/tasks/<%= task.id %>/edit">Edit</a>
    </div>
    <div class='col-md-3'>
      <form action="/tasks/<%= task.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="delete">
      </form>
    </div>
  <%end%>
</div>
